#include<iostream>
#include<cstdlib>
#include<ctime>
using namespace std;
int main ()
{
    
  srand(time(0)); // time(0): it is use for current time  // srand(): it is use to  change the starting point of randomness

  int number = rand() % 100 + 1;
  int guess;

  cout << " === Number Guessing Game ===\n " ;
  cout << " I have selected a number between 1 and 100. \n ";
  cout << " try to guess it!\n\n ";
    
  do
  {
    cout << " Enter your guess: " ;
    cin >> guess ;

    if( guess > number )
    {
        cout << "  Too high! Try again.\n ";
    }
    else if (guess < number )
    {
        cout<< "Too low! Try again \n ";
    }
  }
    while (guess != number );
    {
        cout << "\n congrats! you guesses the correct number :" << number << " \n" ;
    }
  
    return 0 ;
}
